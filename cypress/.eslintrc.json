{
    "extends": [
        "eslint:recommended",
        "plugin:cypress/recommended",
        "plugin:chai-friendly/recommended",
        "prettier"
    ],
    "plugins": [
        "cypress",
        "chai-friendly",
        "prettier"
    ],
    "env": {
        "cypress/globals": true,
        "es2021": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    }
}